{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["dom", "es6"],
    "skipLibCheck": true, // will be removed once dep @types/colors declaration file is fixed 
    "noImplicitAny": true,
    "strict": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../dist",
    "sourceMap": true,
    "declaration": true,
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
